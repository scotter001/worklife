@CHARSET "UTF-8";
.top-buffer { margin-top:15px; }
table tr td {
	vertical-align: middle !important;
}
textarea {
    resize: vertical;
    margin-top: 0px;
    margin-bottom: 0px;
    height: 99px;
}
.table>tbody>tr>td textarea {
  width: 100%;
  border: none;
}

.top-navigation .wrapper.wrapper-content {
	padding: 0 0 40px 0 !important;
}

.btn-default {
	background-color: #f5f3f3 !important;
	border-color: #c2c2c2 !important;
	color: black !important;
}

.heavyBorder {
	border: 1px solid #cfcfcf !important;
}

.table>tbody>tr>th, .table>tbody>tr>td, .table-bordered>tbody>tr>td {
	border-top: 1px solid #cfcfcf !important;
	border-left: 1px solid #cfcfcf !important;
}

.table>thead>tr>th, .table>thead>tr>td, .table-bordered>thead>tr>td {
	border-left: 1px solid #cfcfcf !important;
}

.table>thead>tr>th:first-child, .table>thead>tr>td:first-child,
	.table-bordered>thead>tr>td:first-child {
	border-left: 0px !important;
	border-top: 0px !important;
}

.table>tbody>tr>th:first-child, .table>tbody>tr>td:first-child,
	.table-bordered>tbody>tr>td:first-child, .table>thead>tr>th:first-child,
	.table>thead>tr>td:first-child, .table-bordered>thead>tr>td:first-child
	{
	border-left: 0px !important;
}
tr:hover {
	cursor: pointer;
}
th.dt-center, td.dt-center { text-align: center; }
.table tr:hover {background-color: #eee !important; cursor: pointer !important;}
.activerow{
	 background: #eee !important;
}
#tabs>.nav.nav-tabs>li.active > a{
  	background-color: #1ab394 !important;
  	color: #FFFFFF !important;
}	
table>thead>tr>th {
  background: #F5F5F6 !important;
}
.table td input[type]{
	border-width: 0px;
	border: none !important;
	overflow: hidden;
}
.attachFile {
	text-decoration: underline;
	cursor: pointer;
	color: #337ab7;
	font-weight: 500
}
.deleteFileIcon {
	margin-left: 5px;
	cursor: pointer;
	font-size: 16px;
	display: none;
}
.form-control.heavyBorder.error,
.unique.form-control.error,
.tooltipError.form-control.error,
.checkDate.tooltipError.form-control.error,
.form-control.onlynumber.checkYear.tooltipError.error,
.checkDateOnly.tooltipError.form-control.error,
.checkDateTH.tooltipError.form-control.error{
	border: 1px solid #cc5965 !important;
}
.form-control.error {
	border: 1px solid #cc5965 !important;
}
div.tooltip-inner {
	margin-left:20px;
    text-align: left;
    -webkit-border-radius: 0px;
    -moz-border-radius: 0px;
    border-radius: 0px;
    margin-bottom: 6px;
    font-size: 14px;
  	word-wrap: break-word;
    max-width: 350px !important;
}
#tabs>.nav.nav-tabs>li.active>a {
	background-color: #1ab394 !important;
	color: #FFFFFF !important;
}
.nav.nav-tabs>li.active > a{
	background-color: #1ab394 !important;
	color: #FFFFFF !important;
}
.centerlabel {
    display: block;
    text-align: center;
    line-height: 240%;
}
div.dataTables_filter {
    display: none;
}
#tableSearchSuCoTaiNan tr.selected {
    background-color: #acbad4 !important
}
