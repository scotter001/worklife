<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="worklife.properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:/worklife/properties/globals.properties</value>
            </list>
        </property>
    </bean>
   	<bean id="worklifeConfiguration" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="locations">
			<list>
				<value>classpath:/worklife/properties/globals.properties</value>
			</list>
		</property>
	</bean>
    <bean id="worklife.lobHandler" class="org.springframework.jdbc.support.lob.DefaultLobHandler" lazy-init="true"/>
    <!-- SqlMap setup for iBATIS Database Layer -->
    <!-- define the SqlSessionFactory -->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean" name="mainSqlSessionFactory">
        <property name="dataSource" ref="worklifeDatabase"/>
        <!--<property name="mapperLocations" value="classpath*:worklife/sqlmap/sqlquery/**/${Globals.DbType}/*.xml"/>-->
        <property name="mapperLocations" value="classpath*:worklife/sqlmap/sqlquery/**/*.xml"/>
        <property name="typeAliasesPackage" value="vn.worklife"/>
    </bean>
    <!-- scan for mappers and let them be autowired -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <!--<property name="basePackage" value="vn.worklife.map.mapper;vn.worklife.**.service"/>-->
        <property name="basePackage" value="vn.worklife.map.mapper;vn.worklife.**"/>
        <property name="sqlSessionFactoryBeanName" value="mainSqlSessionFactory"/>
    </bean>

    <bean id="mapSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean" name="mapSqlSessionFactory">
        <property name="dataSource" ref="dataSource-Map"/>
        <property name="mapperLocations" value="classpath*:worklife/sqlmap/map/*.xml"/>
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="vn.worklife.map.mapper2"/>
        <property name="sqlSessionFactoryBeanName" value="mapSqlSessionFactory"/>
    </bean>

</beans>	
